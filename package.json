{
  "name": "roam-theme-dev",
  "version": "1.0.0",
  "description": "Development environment for Roam theme",
  "scripts": {
    "build": "postcss src/styles.css -o dist/theme.css",
    "watch": "postcss src/styles.css -o dist/theme.css --watch",
    "serve": "node server.js",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm run serve\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-nested": "^6.0.1",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}